{
  "name": "Text Drive",
  "description": "Just a text editor.",
  "version": "0.0.26",
  "icons": {
    "16": "icon/16x16.png",
    "96": "icon/96x96.png",
    "128": "icon/128x128.png",
    "256": "icon/256x256.png"
  },
  "manifest_version": 2,
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
  },
  "permissions": [
    "experimental",
    "clipboardRead",
    "clipboardWrite",
    "unlimitedStorage",
    "storage",
    "fileSystem",
    "fileSystemWrite"
  ],
  "intents": {
    "http://webintents.org/edit": [
      {
        "title": "TextDrive",
        "type": [
          "text/*"
        ]
      }
    ]
  }
}